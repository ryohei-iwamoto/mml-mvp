{
  "id": "bearing",
  "category": "drive",
  "name": {
    "en": "Ball Bearing",
    "ja": "ボールベアリング"
  },
  "description": {
    "en": "A ball bearing for shaft support",
    "ja": "シャフト支持用のボールベアリング"
  },
  "keywords": [
    "bearing", "ball bearing", "roller", "support",
    "ベアリング", "軸受", "ボールベアリング", "転がり軸受"
  ],
  "ai_context": "回転軸の支持に使用。ラジアル荷重、アキシャル荷重に対応。6000系、600系などの規格サイズあり。",
  "parameters": {
    "outer_diameter_mm": {
      "type": "float",
      "default": 22.0,
      "min": 10.0,
      "max": 100.0,
      "unit": "mm",
      "description": {"ja": "外径"}
    },
    "inner_diameter_mm": {
      "type": "float",
      "default": 8.0,
      "min": 3.0,
      "max": 50.0,
      "unit": "mm",
      "description": {"ja": "内径（シャフト径）"}
    },
    "width_mm": {
      "type": "float",
      "default": 7.0,
      "min": 3.0,
      "max": 30.0,
      "unit": "mm",
      "description": {"ja": "幅"}
    },
    "chamfer_mm": {
      "type": "float",
      "default": 0.5,
      "min": 0,
      "max": 2.0,
      "unit": "mm",
      "description": {"ja": "面取り"}
    }
  },
  "constraints": [
    {
      "kind": "expression",
      "expression": "inner_diameter_mm < outer_diameter_mm * 0.6",
      "message": "内径が外径に対して大きすぎます"
    }
  ],
  "generator": {
    "module": "mml.library.generators.drive_generators",
    "function": "generate_bearing"
  },
  "compatible_with": ["shaft", "bracket", "plate"],
  "assembly_hints": {
    "axis": "z",
    "fit": "press_fit_outer"
  }
}
